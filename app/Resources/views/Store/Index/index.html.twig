<!DOCTYPE html>
<html lang="en">

{% block head %}
<head>
    <meta charset="UTF-8">
    {% block title %}
        <title>Smartstore</title>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block styles %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.css') }}">
    {% endblock %}
</head>
{% endblock %}

{% block body %}
<body>
{% block wrapper %}
<div class="wrapper">

    {% block noscript %}
        <noscript>
            <div class="alert alert-warning">
                <strong>{{ notice_js_disabled }}&nbsp;</strong>{{ js_disabled }}
            </div>
        </noscript>
    {% endblock %}

    {% block header %}
    <div class="header container-fluid">
        {% block topHeaderRow %}
        <div class="header-top row">

            <div class="col-lg-1 stores">
                <button class="btn btn-primary dropdown-toggle dropdown-btn" type="button"
                        id="loginBtn" location="stores" onclick="btnNav('stores')">
                    {{ stores }}
                </button>
            </div>

            <div class="col-lg-1 contact">
                <button class="btn btn-primary dropdown-toggle dropdown-btn" type="button"
                        id="loginBtn" location="stores" onclick="btnNav('contact')">
                    {{ contact_us }}
                </button>
            </div>

            <div class="col-lg-1 wishlist">
                <button class="btn btn-primary dropdown-toggle dropdown-btn" type="button"
                        id="loginBtn" location="wishlist" onclick="btnNav('wishlist')">
                    {{ wishlist }}
                </button>
            </div>

            <div class="col-lg-6"></div>

            <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2 lang">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle dropdown-btn" type="button"
                            id="lang"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li id="en" onclick="changeLang(this)"><a href="" data-value="en">English</a></li>
                        <li id="pl" onclick="changeLang(this)"><a href="" data-value="pl">Polski</a></li>
                        <li id="ru" onclick="changeLang(this)"><a href="" data-value="ru">Русский</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-2 currency">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle dropdown-btn" type="button" id="currency"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="currency">
                        {{ render (controller('StoreBundle:Main:getCurrencyList')) }}
                    </ul>
                </div>
            </div>

            <div class="col-lg-1 col-md-1 col-sm-2  hidden-xs login">
                <button class="btn btn-primary dropdown-toggle dropdown-btn" type="button"
                        id="loginBtn" location="login" onclick="btnNav('login')">
                    {{ login }}
                </button>
            </div>
        </div>
        {% endblock %}
        {% block midHeasderRow %}
            <div class="header-mid row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 logo-container">
                    <img src="{{ asset('img/logo_white_plus.png') }}">
                </div>

                <div class="col-lg-7 col-md-6 hidden-sm hidden-xs search-block">
                    <div class="input-group">
                        <input type="text" class="form-control"
                               aria-label="Text input with segmented button dropdown">

                        <div class="input-group-btn dropdown">
                            <button type="button" class="btn btn-primary dropdown-toggle category-btn dropdown-btn"
                                    data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                {{ all_categories }}&nbsp;<span class="caret"></span> <span
                                        class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="#">Action</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                            <button type="button" class="btn btn-primary search-btn">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1" style="border: 1px solid black">col-lg-2</div>
                <div class="col-lg-1" style="border: 1px solid black">col-lg-1</div>
                <div class="col-lg-1" style="border: 1px solid black">col-lg-1</div>
                {#<div class="col-lg-2 col-md-2 hidden-sm hidden-xs contact-block">#}
                    {#<button type="button" class="btn btn-primary contact-button">#}
                        {#<span class="glyphicon glyphicon-earphone"></span>#}
                        {#{{ contact_us }}#}
                    {#</button>#}
                {#</div>#}
                {#<div class="col-lg-1 col-md-2 hidden-sm hidden-xs cart-block" style="border: 1px solid black">#}
                    {#<button type="button" class="btn btn-primary shopping-cart">#}
                        {#<span class="glyphicon glyphicon-shopping-cart"></span>#}
                        {#{{ cart }} (0)#}
                    {#</button>#}
                {#</div>#}
                <!--VISIBLE ONLY ON TABLETS AND MOBILES-->
                <div class="hidden-lg hidden-md col-sm-7 col-xs-6"></div>
                <div class="hidden-lg hidden-md col-sm-1 sm-xs-col col-xs-1">
                    <button type="button" class="btn btn-primary icon-button" data-toggle="collapse"
                            data-target="#collapseMenu" id="menu-toggle">
                        <span class="glyphicon glyphicon-align-justify"></span>
                    </button>
                </div>
                <div class="hidden-lg hidden-md col-sm-1 sm-xs-col col-xs-1">
                    <button type="button" class="btn btn-primary icon-button">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </div>
                <div class="hidden-lg hidden-md col-sm-1 sm-xs-col col-xs-1">
                    <button type="button" class="btn btn-primary icon-button">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                    </button>
                </div>
            </div>
        {% endblock %}
    </div>
    {% endblock %}

    {% block content %}
        <div class="content">

        </div>
    {% endblock %}

    {% block footer %}
        <div class="footer">

        </div>
    {% endblock %}

</div>
{% endblock %}
{% block sripts %}
    <script src="https://code.jquery.com/jquery-2.2.2.js"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script>

        function changeLang(element) {
            var selectedLang = element.id;
            $.ajax({
                url: "{{ path('store_changeLang') }}",
                type: "POST",
                data: {
                    "selectedLang": selectedLang
                },
                success: function (data) {
                    location.reload();
                }
            });
        }

        var curLang = '{{ app.session.get('selectedLang') }}';

        $('.dropdown-menu').find('#' + curLang).addClass("default-lang");
        function btnNav(navigateTo) {
            $(location).attr('href', '/smartstore/web/app_dev.php' + '/' + navigateTo);
        }

        $(document).ready(function () {
            $('.default_cur').parents(".dropdown").find('.btn').html($('.default_cur').text() + ' <span class="caret"></span>');
            $('.default-lang').parents(".dropdown").find('.btn').html($('.default-lang').text() + ' <span class="caret"></span>');
        });

        $(".dropdown-menu li a").click(function () {
            $(this).parents(".dropdown").find('.dropdown-btn').html($(this).text() + ' <span class="caret"></span>');
            $(this).parents(".dropdown").find('.dropdown-btn').val($(this).data('value'));
        });
    </script>
{% endblock %}
</body>
{% endblock %}
</html>